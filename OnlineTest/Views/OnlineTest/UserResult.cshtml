@model WinnerModel
@{
    int index = 0;
}
<div class="card mb-5" style="border:0px; border-radius: 20px;">
    <div class="card-body">
        <section class="section skills">
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <h3 class="text-center fw-bold">
                            Result
                        </h3>
                        <table class="table table-responsive">
                            <thead class="thead-dark">
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Name</th>
                                    <th scope="col">State</th>
                                    <th scope="col">Prize</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Top3WinnerList)
                                {
                                    <tr>
                                        <th scope="row">@(index + 1)</th>
                                        <td>@item.Name</td>
                                        <td>@item.State</td>
                                        <td>@(Model.Top3WinnerPrize[index])</td>
                                    </tr>
                                    index = index + 1;
                                }
                            </tbody>
                        </table>

                    </div>
                </div>
            </div>
        </section>
    </div>
</div>
